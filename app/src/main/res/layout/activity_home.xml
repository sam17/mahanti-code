<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="#261C2A">

    <ImageView
        android:id="@+id/power"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:background="#261C2A"
        android:src="@drawable/peerfect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <AbsoluteLayout
        android:id="@+id/absoluteLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/power"
        app:layout_constraintVertical_bias="0.043">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_x="6dp"
            android:layout_y="6dp"
            android:background="@drawable/edittext"
            android:shape="rectangle"
            android:text="HOME" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_x="7dp"
            android:layout_y="57dp"
            android:background="@drawable/edittext"
            android:text="RESET" />

        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_x="111dp"
            android:layout_y="7dp"
            android:background="@drawable/edittext"
            android:text="X" />

        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_x="186dp"
            android:layout_y="6dp"
            android:background="@drawable/edittext"
            android:text="Y" />

        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_x="257dp"
            android:layout_y="6dp"
            android:background="@drawable/edittext"
            android:text="Z" />

        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_x="326dp"
            android:layout_y="7dp"
            android:background="@drawable/edittext"
            android:text="A" />

        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_x="111dp"
            android:layout_y="56dp"
            android:background="@drawable/edittext"
            android:text="X0" />

        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_x="187dp"
            android:layout_y="56dp"
            android:background="@drawable/edittext"
            android:text="Y0" />

        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_x="258dp"
            android:layout_y="55dp"
            android:background="@drawable/edittext"
            android:text="Z0" />


        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_x="327dp"
            android:layout_y="54dp"
            android:background="@drawable/edittext"
            android:text="A0" />
    </AbsoluteLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/absoluteLayout"
        app:layout_constraintVertical_bias="0.06">

        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="15dp"
            android:background="#000000"
            android:text="RESET"
            android:textColor="#ffffff" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/addn2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="17dp"
            android:src="@drawable/minus2" />

        <EditText
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_marginLeft="135dp"
            android:layout_marginTop="20dp"
            android:hint="FEED RATE"
            android:textColorHint="#000000" />

        <EditText
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="290dp"

            android:layout_marginTop="20dp"
            android:layout_marginEnd="24dp"
            android:hint="FRO%"
            android:textColorHint="#000000" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout2"
        app:layout_constraintVertical_bias="0.052"
        tools:layout_editor_absoluteX="10dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="SPINDLE"
            android:id="@+id/spindlebutton"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:text="COOLENT"
            android:id="@+id/coolanthome"/>


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="20dp"
            android:hint="SPINDLE RATE"
            android:textColorHint="#000000" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:text="CW" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="33dp"
            android:text="CCW" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="390dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.476"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout3"
        app:layout_constraintVertical_bias="0.936">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/icon" />

        <ImageView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/jog"
            android:id="@+id/joghome"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/killit"
            android:id="@+id/kill"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/execute"
            android:id="@+id/executehome"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/create"
            android:id="@+id/createhome"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="55dp"
            android:text="HOME"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="55dp"
            android:text="JOG"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="55dp"
            android:text="KILL"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="55dp"
            android:text="EXECUTE"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="55dp"
            android:text="CREATE"
            android:textColor="#000000" />

    </RelativeLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="170dp"
        android:layout_height="30dp"
        android:background="#808B96"
        android:text="       COMMAND   LINE"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.075"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout3"
        app:layout_constraintVertical_bias="0.124" />

    <EditText
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />


    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="190dp"
        android:background="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#808B96"
            android:text="         MACHINE"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#808B96"
            android:text="          WORK"
            android:layout_marginLeft="100dp"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textColor="#000000"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Y"
            android:textColor="#000000"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Z"
            android:textColor="#000000"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A"
            android:textColor="#000000"
            android:layout_marginTop="150dp"
            android:layout_marginLeft="5dp"
            android:textSize="18dp"/>

        <EditText
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="40dp"
            android:inputType="numberDecimal"/>

        <EditText
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="80dp"
            android:inputType="numberDecimal"/>

        <EditText
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="120dp"
            android:inputType="numberDecimal"/>

        <EditText
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="160dp"
            android:inputType="numberDecimal"/>

        <EditText
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="160dp"
            android:inputType="numberDecimal"/>

        <EditText
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="120dp"
            android:inputType="numberDecimal"/>

        <EditText
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="80dp"
            android:inputType="numberDecimal"/>

        <EditText
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="40dp"
            android:inputType="numberDecimal"/>


    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>